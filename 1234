##_Combined_Measure = 
SWITCH(
    TRUE(),
    [Some_Condition] = "Value1", 
        CALCULATE(COUNTROWS('PP'),
            NOT(ISBLANK('PP'[InSufficient ])) && 
            ISBLANK('APR Tracker Phase 2aa'[Sufficient ])
        ),
    [Some_Condition] = "Value2",
        CALCULATE(COUNTROWS('PP'),
            ISBLANK('PP'[InSufficient PI]) && 
            ISBLANK('PP'[Report])
        ),
    0  -- Default if no conditions match
)
